<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" method="upgrade" group="slogin_auth">
	<name>PLG_SLOGIN_AUTH_VKONTAKTE</name>
	<author>Arkadiy, Joomline</author>
	<creationDate>28.01.2019</creationDate>
	<copyright>(C) 2012-2019. All rights reserved.</copyright>
	<license>GNU/GPL v.3 or later.</license>
	<authorEmail></authorEmail>
	<authorUrl>https://joomline.ru</authorUrl>
	<version>1.3.0</version>
	<description>PLG_SLOGIN_AUTH_VKONTAKTE_DESC</description>
	<files>
		<filename plugin="vkontakte">vkontakte.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>element</folder>
		<folder>language</folder>
	</files>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="plugins/slogin_auth/vkontakte/element">
                <field name="id" type="text" default=""
                       description="PLG_SLOGIN_AUTH_VKONTAKTE_APP_ID_DESC"
                       label="PLG_SLOGIN_AUTH_VKONTAKTE_APP_ID_LABEL"
                        />
                <field name="password" type="text" default=""
                       description="PLG_SLOGIN_AUTH_VKONTAKTE_SECRET_KEY_DESC"
                       label="PLG_SLOGIN_AUTH_VKONTAKTE_SECRET_KEY_LABEL"
                        />
                <field
                        name="menu_item_id"
                        type="menuitem"
                        label="PLG_SLOGIN_AUTH_VKONTAKTE_MENU_ITEM_LABEL"
                        description="PLG_SLOGIN_AUTH_VKONTAKTE_MENU_ITEM_DESC"
                        >
                        <option value="">JSELECT</option>
                </field>
                <field
                        name="use_menu_item"
                        type="radio"
                        label="PLG_SLOGIN_AUTH_VKONTAKTE_USE_MENU_ITEM_LABEL"
                        description="PLG_SLOGIN_AUTH_VKONTAKTE_USE_MENU_ITEM_DESC"
                        class="btn-group btn-group-yesno"
                        default="0"
                        >
                        <option value="1">JYES</option>
                        <option value="0">JNO</option>
                </field>
          <!--	<field
                        name="repost_comments"
                        type="checkbox"
                        label="Repost Comments"
                        description="Repost Comments"
                        value="1"
                        /> --> 
                <field
                        name="callback_url"
                        type="callbackurl"
                        label="PLG_SLOGIN_AUTH_VKONTAKTE_BASE_URL_LABEL"
                        description="PLG_SLOGIN_AUTH_VKONTAKTE_BASE_URL_DESC"
                        filter="unset"
                        value=""
                        readonly="true"
                        class="readonly form-control"
                        />
                <field
                        name="trusted_redirect_uri"
                        type="trustedredirecturi"
                        label="PLG_SLOGIN_AUTH_VKONTAKTE_TRUSTED_REDIRECT_URI_LABEL"
                        description="PLG_SLOGIN_AUTH_VKONTAKTE_TRUSTED_REDIRECT_URI_DESC"
                        filter="unset"
                        readonly="true"
                        class="readonly"
                        />
            </fieldset>
        </fields>
    </config>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_slogin_auth_vkontakte.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_slogin_auth_vkontakte.sys.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.plg_slogin_auth_vkontakte.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.plg_slogin_auth_vkontakte.sys.ini</language>
    </languages>
</extension>