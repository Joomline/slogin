<?xml version="1.0" encoding="utf-8"?>
<extension version="5.0" type="plugin" method="upgrade" group="slogin_auth">
	<name>Social Login Twitter auth</name>
	<author>Arkadiy, Joomline</author>
	<creationDate>28.01.2019</creationDate>
	<copyright>(C) 2012-2025. All rights reserved.</copyright>
	<license>GNU/GPL v.3 or later.</license>
	<authorEmail></authorEmail>
	<authorUrl>https://joomline.ru</authorUrl>
	<version>5.0.0</version>
	<description>Twitter auth</description>
	<namespace path="src">Joomla\Plugin\SloginAuth\Twitter</namespace>
	<files>
		<filename plugin="twitter">twitter.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>element</folder>
	</files>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="plugins/slogin_auth/twitter/element">
                <field name="id" type="text" default=""
                       description="Consumer key"
                       label="Consumer key"
                        />
                <field name="password" type="text" default=""
                       description="Consumer secret"
                       label="Consumer secret"
                        />
                <field
                        name="repost_comments"
                        type="checkbox"
                        label="Repost Comments"
                        description="Repost Comments"
                        value="1"
                        />
                <field
                        name="callback_url"
                        type="callbackurl"
                        label="Callback URI"
                        description="Callback URI"
                        filter="unset"
                        value="twitter"
                        readonly="true"
                        class="readonly"
                        />
            </fieldset>
        </fields>
    </config>
</extension>
