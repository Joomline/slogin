<?xml version="1.0" encoding="utf-8"?>
<extension version="5.0" type="plugin" method="upgrade" group="slogin_auth">
	<name>Social Login mail.ru auth</name>
	<author>Arkadiy, Joomline</author>
	<creationDate>28.01.2019</creationDate>
	<copyright>(C) 2012-2025. All rights reserved.</copyright>
	<license>GNU/GPL v.3 or later.</license>
	<authorEmail></authorEmail>
	<authorUrl>https://joomline.ru</authorUrl>
	<version>5.0.0</version>
	<namespace path="src">Joomla\Plugin\SloginAuth\Mail</namespace>
	<description>mail.ru auth</description>
	<files>
		<filename plugin="mail">mail.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>element</folder>
	</files>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="plugins/slogin_auth/mail/element">
                <field name="id" type="text" default=""
                       description="Application Id"
                       label="Application Id"
                        />
                <field name="password" type="text" default=""
                       description="Secret Key"
                       label="Secret Key"
                        />
            </fieldset>
        </fields>
    </config>
</extension>
