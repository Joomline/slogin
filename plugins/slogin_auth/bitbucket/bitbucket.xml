<?xml version="1.0" encoding="utf-8"?>
<extension version="5.0" type="plugin" method="upgrade" group="slogin_auth">
	<name>Social Login BitBucket auth</name>
	<author>Arkadiy, Joomline</author>
	<creationDate>18.04.2020</creationDate>
	<copyright>Â© 2012 - 2025. All rights reserved.</copyright>
	<license>GNU/GPL v.3 or later.</license>
	<authorEmail></authorEmail>
	<authorUrl>https://joomline.ru</authorUrl>
	<version>5.0.0</version>
	<description>BitBucket auth</description>
	<namespace path="src">Joomla\Plugin\SloginAuth\BitBucket</namespace>
	<files>
		<filename plugin="bitbucket">bitbucket.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>element</folder>
	</files>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="plugins/slogin_auth/bitbucket/element">
                <field name="id" type="text" default=""
                       description="Client ID"
                       label="Client ID"
                        />
                <field name="password" type="text" default=""
                       description="Client secret"
                       label="Client secret"
                        />
                <field
                        name="callback_url"
                        type="callbackurl"
                        label="Callback URL"
                        description="Callback URL"
                        filter="unset"
                        value="bitbucket"
                        readonly="true"
                        class="readonly"
                        />
            </fieldset>
        </fields>
    </config>
</extension>
