<?xml version="1.0" encoding="utf-8"?>
<extension version="5.0" type="plugin" method="upgrade" group="slogin_auth">
	<name>Social Login Yandex auth</name>
	<author>Arkadiy, Joomline</author>
	<creationDate>28.01.2019</creationDate>
	<copyright>Â© 2012 - 2025. All rights reserved.</copyright>
	<license>GNU/GPL v.3 or later.</license>
	<authorEmail></authorEmail>
	<authorUrl>https://joomline.ru</authorUrl>
	<version>5.0.0</version>
	<description>Yandex auth. Instructions for setting up the plugin: https://joomline.ru/stati/53-komponenty/306-sozdanie-prilozhenij-dlja-socialnoj-avtoriziacii.html</description>
	<namespace path="src">Joomla\Plugin\SloginAuth\Yandex</namespace>
	<files>
		<filename plugin="yandex">yandex.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
        <folder>element</folder>
	</files>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="plugins/slogin_auth/yandex/element">
                <field name="id" type="text" default=""
                       description="Yandex Application Id"
                       label="Id"
                        />
                <field name="password" type="text" default=""
                       description="Yandex Application Password"
                       label="Password"
                        />
                <field
                        name="callback_url"
                        type="callbackurl"
                        label="Callback URI"
                        description="Callback URI"
                        filter="unset"
                        value="yandex"
                        readonly="true"
                        class="readonly"
                        />
            </fieldset>
        </fields>
    </config>
</extension>
