<?xml version="1.0" encoding="utf-8"?>
<extension version="5.0" type="plugin" method="upgrade" group="slogin_auth">
	<name>Social Login Facebook auth</name>
	<author>Arkadiy, Joomline</author>
	<creationDate>16.10.2025</creationDate>
	<copyright>(C) 2012-2025. All rights reserved.</copyright>
	<license>GNU/GPL v.3 or later.</license>
	<authorEmail></authorEmail>
	<authorUrl>https://joomline.ru</authorUrl>
	<version>5.0.0</version>
	<namespace path="src">Joomline\Plugin\SloginAuth\Facebook</namespace>
	<description>Facebook auth</description>
	<files>
		<filename plugin="facebook">facebook.php</filename>
		<filename>index.html</filename>
		<folder>src</folder>
		<folder>services</folder>
		<folder>assets</folder>
		<folder>element</folder>
	</files>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="plugins/slogin_auth/facebook/src/Field">
                <field name="id" type="text" default=""
                       description="Facebook Application Id"
                       label="App ID/API Key"
                        />
                <field name="password" type="text" default=""
                       description="Facebook Application Secret"
                       label="Secret"
                        />
                <field
                        name="callback_url"
                        type="callbackurl"
                        label="Callback URI"
                        description="Callback URI"
                        filter="unset"
                        value="facebook"
                        readonly="true"
                        class="readonly form-control"
                        />

            </fieldset>
        </fields>
    </config>
</extension>
