<?xml version="1.0" encoding="utf-8"?>
<extension version="5.0" type="plugin" method="upgrade" group="slogin_auth">
	<name>Social Login Wordpress auth</name>
	<author>Arkadiy, Joomline</author>
	<creationDate>28.01.2019</creationDate>
	<copyright>(C) 2012-2025. All rights reserved.</copyright>
	<license>GNU/GPL v.3 or later.</license>
	<authorEmail></authorEmail>
	<authorUrl>https://joomline.ru</authorUrl>
	<version>5.0.0</version>
	<description>Wordpress auth</description>
	<namespace path="src">Joomla\Plugin\SloginAuth\Wordpress</namespace>
	<files>
		<filename plugin="wordpress">wordpress.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>element</folder>
	</files>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="plugins/slogin_auth/wordpress/element">
                <field name="id" type="text" default=""
                       description="Client ID"
                       label="Client ID"
                        />
                <field name="password" type="text" default=""
                       description="Client secret"
                       label="Client secret"
                        />
                <field
                        name="callback_url"
                        type="callbackurl"
                        label="Callback URL"
                        description="Callback URL"
                        filter="unset"
                        value="wordpress"
                        readonly="true"
                        class="readonly form-control"
                        />
            </fieldset>
        </fields>
    </config>
</extension>
