                disable="separator"
                label="COM_SLOGIN_AFTER_REGISTER_REDIRECT_LABEL"
                description="COM_SLOGIN_AFTER_REGISTER_REDIRECT_DESC" >
            <option
                    value="">JDEFAULT</option>
