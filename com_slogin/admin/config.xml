			type="list"
			label="COM_SLOGIN_FIELD_USER_USER_NAME_LABEL"
			description="COM_SLOGIN_FIELD_USER_USER_NAME_DESC"
			default="1"
			>
				<option value="1">COM_SLOGIN_FIRST_LAST_NAME_PROVIDER</option>
				<option value="0">E-mail</option>
		</field>

